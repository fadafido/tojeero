<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
	    xmlns:core="clr-namespace:Tojeero.Core;assembly=Tojeero.Core"
	    xmlns:controls="clr-namespace:Tojeero.Forms.Controls;assembly=Tojeero.Forms"
	    x:Class="Tojeero.Forms.Views.Product.ProductView">
    <controls:BorderView
      BorderColor="{x:Static core:Colors.CellBorder}"
      BorderWidth="1"
      BackgroundColor="{x:Static core:Colors.CellBackground}" />
    <Grid
      ColumnSpacing="0"
      RowSpacing="0"
      Padding="3,3,6,3"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
              Width="Auto" />
            <ColumnDefinition
              Width="5" />
            <ColumnDefinition
              Width="*" />
            <ColumnDefinition
              Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
              Height="*" />
            <RowDefinition
              Height="Auto" />
            <RowDefinition
              Height="20" />
        </Grid.RowDefinitions>
        <Image
          x:Name="productImage"
          Grid.RowSpan="3"
          Aspect="AspectFit"
          BackgroundColor="{x:Static core:Colors.ImagePlaceholder}"
          Source="{Binding Product.ImageUrl, Converter={StaticResource cachedImage}}"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand"
          WidthRequest="120"/>
        <controls:LabelEx
          Grid.Column="2"
          Text="{Binding Product.Name}"
          TextColor="{x:Static core:Colors.Main}"
          FontAttributes="Bold"
          LineCount="2"
          FontSize="12"
          VerticalOptions="FillAndExpand" />
        <controls:ImageButton
          Grid.Column="3"
          VerticalOptions="Start"
          HeightRequest="25"
          WidthRequest="25"
          SelectedImage="favorite_selected.png"
          Image="favorite_deselected.png"
          IsSelected="{Binding Favorite.IsFavorite}"
          IsEnabled="{Binding CanExecuteToggleFavoriteCommand}"
          IsVisible="{Binding IsFavoriteToggleVisible}"
          Command="{Binding ToggleFavoriteCommand}" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Text="{Binding StatusWarning}"
            TextColor="{Binding WarningColor}"
            IsVisible="{Binding StatusWarning, Converter={StaticResource visibility}}"
            FontSize="10"
            VerticalOptions="Center"
            HorizontalTextAlignment="End"/>
        <StackLayout
          Grid.Row="2"
          Grid.Column="2"
          Grid.ColumnSpan="2"
          Orientation="Horizontal"
          HorizontalOptions="EndAndExpand"
          VerticalOptions="Center"
          Spacing="0">
            <Label
              Text="{Binding Product.FormattedPrice}"
              TextColor="{x:Static core:Colors.Secondary}"
              FontAttributes="Bold"
              LineBreakMode="TailTruncation"
              FontSize="15" />
            <Label
              Text="{Binding Product.Country.Currency}"
              TextColor="{x:Static core:Colors.Main}"
              FontAttributes="Bold"
              FontSize="9"
              VerticalOptions="Center" />
        </StackLayout>
    </Grid>
</Grid>
