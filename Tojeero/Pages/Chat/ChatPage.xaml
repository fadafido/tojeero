<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
             x:Class="Tojeero.Forms.Pages.Chat.ChatPage"
             BackgroundColor="White">
  <StackLayout>
    <ListView
       x:Name="listView"
       HasUnevenRows="True"
       RowHeight="-1"
       ItemsSource="{Binding Messages}"
       SeparatorVisibility="None">
      <ListView.ItemTemplate>
        <DataTemplate>
          <local:ChatMessageCell/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <StackLayout
      Orientation="Horizontal"
      Padding="10">
      <Entry
        Text="{Binding CurrentMessage, Mode=TwoWay}"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"/>
      <Button
        Text="Send"
        IsEnabled="{Binding CanExecuteSendMessageCommand}"
        Command="{Binding SendMessageCommand}"/>
    </StackLayout>
  </StackLayout>
</ContentPage>