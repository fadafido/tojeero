<?xml version="1.0" encoding="UTF-8"?>
<Application
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
	x:Class="Tojeero.Forms.FormsApp">
	<Application.Resources>
		<ResourceDictionary>
			<Style
				x:Key="BaseButton"
				TargetType="Button">
				<Setter
					Property="BorderRadius"
					Value="3" />
				<Setter
					Property="HeightRequest"
					Value="40" />
				<Setter
					Property="TextColor"
					Value="White" />
			</Style>
			<Style
				x:Key="PositiveButton"
				TargetType="Button"
				BaseResourceKey="BaseButton">
				<Setter
					Property="BackgroundColor"
					Value="{x:Static local:Colors.Green}" />
			</Style>
			<Style
				x:Key="NegativeButton"
				TargetType="Button"
				BaseResourceKey="BaseButton">
				<Setter
					Property="BackgroundColor"
					Value="{x:Static local:Colors.Orange}" />
			</Style>
			<Style
				x:Key="DarkButton"
				TargetType="Button"
				BaseResourceKey="BaseButton">
				<Setter
					Property="BackgroundColor"
					Value="{x:Static local:Colors.DarkBlack}" />
			</Style>
			<local:VisibilityConverter
				x:Key="visibility" />
			<local:InverseBoolConverter
				x:Key="inverse" />
			<local:BoolToOpacityConverter
				x:Key="opacity" />
			<local:InverseBoolToOpacityConverter
				x:Key="inverseOpacity" />
			<local:UrlToCachedImageSourceConverter
				x:Key="cachedImage" />
			<local:DoubleConverter
				x:Key="double" />
			<local:NullableBoolConverter
				x:Key="bool"/>
		</ResourceDictionary>
	</Application.Resources>
</Application>