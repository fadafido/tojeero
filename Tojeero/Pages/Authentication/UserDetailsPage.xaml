<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tojeero.Forms.UserDetailsPage"
			 xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
			 BackgroundColor="{x:Static local:Colors.UltraLightGray}">
	<ContentPage.Content>
		<StackLayout Padding="20">
			<StackLayout Orientation="Vertical" Spacing="10">
				<StackLayout Orientation="Horizontal" Spacing="5">
					<StackLayout Orientation="Vertical">
						<Image BackgroundColor="Gray" HeightRequest="100" WidthRequest="100" Aspect="AspectFill"></Image>
					</StackLayout>
					<StackLayout Orientation="Vertical">
						<Label Text="First name:" TextColor="{x:Static local:Colors.UltraGray}"/>
						<Label Text="John"/>
						<Label Text="Last name:" TextColor="{x:Static local:Colors.UltraGray}"/>
						<Label Text="Appleseed"/>
						<Label Text="Email" TextColor="{x:Static local:Colors.UltraGray}"/>
						<Label Text = "john.appleseed@apple.com"/>
					</StackLayout>
				</StackLayout>

				<Picker Title="Country"/>
				<Picker Title="City"/>
				<Entry Placeholder="Country"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
