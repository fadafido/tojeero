<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
	xmlns:markupExtensions="clr-namespace:Tojeero.Forms.Markup_Extensions;assembly=Tojeero.Forms"
	xmlns:controls="clr-namespace:Tojeero.Forms.Controls;assembly=Tojeero.Forms"
	xmlns:core="clr-namespace:Tojeero.Core;assembly=Tojeero.Core"
	x:Class="Tojeero.Forms.Views.Store.StoreDetailsPage"
	Title="{markupExtensions:Translate TitleStoreDetails}"
	BackgroundColor="White">
	<ContentPage.Content>
		<ScrollView
			x:Name="scrollView"
			VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand">
			<StackLayout
				Spacing="0"
				VerticalOptions="Start"
				HorizontalOptions="FillAndExpand">
				<controls:NetworkPageHeader
					NoNetworkPadding="0,5,0,5"
					Tint="{x:Static core:Colors.DarkGray}"
					IsLoading="{Binding IsLoading}"
					LoadingText="{Binding LoadingText}"
					FailureMessage="{Binding LoadingFailureMessage}"
					IsNetworkAvailable="{Binding IsNetworkAvailable}"
					TryAgainCommand="{Binding ReloadCommand}" />
				<StackLayout
					IsVisible="{Binding StatusWarning, Converter={StaticResource visibility}}"
					HorizontalOptions="FillAndExpand"
					Padding="10">
					<Label
						Text="{Binding StatusWarning}"
						Style="{StaticResource LabelInvalid}"
						HorizontalTextAlignment="Center"
						FontSize="15" />
				</StackLayout>
				<!--STORE IMAGE-->
				<Grid
					HeightRequest="250"
					HorizontalOptions="FillAndExpand"
					BackgroundColor="{x:Static core:Colors.ImagePlaceholder}">
					<Image
						Aspect="AspectFit"
						Source="{Binding Store.ImageUrl, Converter={StaticResource cachedImage}}" />
				</Grid>
				<!--STORE NAME-->
				<StackLayout
					Padding="10"
					Spacing="10">
					<BoxView
						BackgroundColor="{x:Static core:Colors.Separator}"
						HeightRequest="1"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="Start" />
					<Label
						Text="{Binding Store.Name}"
						TextColor="{x:Static core:Colors.Main}"
						FontSize="15"
						VerticalOptions="FillAndExpand"
						HorizontalOptions="FillAndExpand" />
				</StackLayout>
				<!--FAVORITES AND SHARING-->
				<controls:FavoriteSocialView
					ViewModel="{Binding .}" />
        <Button
          Text="{markupExtensions:Translate ButtonChatWithSeller}"
          Command="{Binding ChatCommand}"
          BackgroundColor="{x:Static core:Colors.Main}"
          TextColor="White"
          FontSize="20"
          FontAttributes="Bold"
          HeightRequest="50"
          HorizontalOptions="FillAndExpand"/>
				<!--STORE DETAILS-->
				<BoxView
					BackgroundColor="{x:Static core:Colors.Separator}"
					HeightRequest="1"
					HorizontalOptions="FillAndExpand" />
				<Grid
					Padding="10,0,10,0"
					RowSpacing="0"
					ColumnSpacing="12">
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="Auto" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<ContentView
						Grid.Column="0"
						Grid.Row="0"
						Padding="0,6,0,6">
						<Label
							Text="{markupExtensions:Translate LabelStoreDetailsCategory}"
							TextColor="{x:Static core:Colors.Subtitle}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<ContentView
						Grid.Column="1"
						Grid.Row="0"
						Padding="0,6,0,6">
						<Label
							Text="{Binding Store.Category.Name}"
							TextColor="{x:Static core:Colors.Main}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<BoxView
						Grid.Row="0"
						Grid.ColumnSpan="2"
						BackgroundColor="{x:Static core:Colors.Separator}"
						HeightRequest="1"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="End" />
					<ContentView
						Grid.Row="1"
						Grid.Column="0"
						Padding="0,6,0,6">
						<Label
							Text="{markupExtensions:Translate LabelStoreDetailsCountry}"
							TextColor="{x:Static core:Colors.Subtitle}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<ContentView
						Grid.Column="1"
						Grid.Row="1"
						Padding="0,6,0,6">
						<Label
							Text="{Binding Store.Country.Name}"
							TextColor="{x:Static core:Colors.Main}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<BoxView
						Grid.Row="1"
						Grid.ColumnSpan="2"
						BackgroundColor="{x:Static core:Colors.Separator}"
						HeightRequest="1"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="End" />
					<ContentView
						Grid.Row="2"
						Grid.Column="0"
						Padding="0,6,0,6">
						<Label
							Text="{markupExtensions:Translate LabelStoreDetailsCity}"
							TextColor="{x:Static core:Colors.Subtitle}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<ContentView
						Grid.Column="1"
						Grid.Row="2"
						Padding="0,6,0,6">
						<Label
							Text="{Binding Store.City.Name}"
							TextColor="{x:Static core:Colors.Main}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<BoxView
						Grid.Row="2"
						Grid.ColumnSpan="2"
						BackgroundColor="{x:Static core:Colors.Separator}"
						HeightRequest="1"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="End" />
					<ContentView
						Grid.Row="3"
						Grid.Column="0"
						Padding="0,6,0,6">
						<Label
							Text="{markupExtensions:Translate LabelStoreDetailsDescription}"
							TextColor="{x:Static core:Colors.Subtitle}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<ContentView
						Grid.Column="1"
						Grid.Row="3"
						Padding="0,6,0,6">
						<Label
							Text="{Binding Store.Description}"
							TextColor="{x:Static core:Colors.Main}"
							FontAttributes="Bold"
							FontSize="14" />
					</ContentView>
					<BoxView
						Grid.ColumnSpan="2"
						Grid.Row="3"
						BackgroundColor="{x:Static core:Colors.Separator}"
						HeightRequest="1"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="End" />
				</Grid>
				<controls:CollapsibleView
					x:Name="deliveryNotes"
					Title="{markupExtensions:Translate LabelStoreDetailsDeliveryNotes}">
					<controls:CollapsibleView.CollapsibleContent>
						<Label
							Text="{Binding Store.DeliveryNotes}"
							TextColor="{x:Static core:Colors.Main}"
							FontSize="9" />
					</controls:CollapsibleView.CollapsibleContent>
				</controls:CollapsibleView>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>