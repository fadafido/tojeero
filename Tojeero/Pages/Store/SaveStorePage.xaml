<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Tojeero.Forms.SaveStorePage"
	xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
	xmlns:core="clr-namespace:Tojeero.Core;assembly=Tojeero.Forms"
	BackgroundColor="White"
	Title="{local:Translate TitleFilterStores}">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout
				Spacing="0"
				VerticalOptions="FillAndExpand">
				<local:NetworkPageHeader
					NoNetworkPadding="0,5,0,5"
					Tint="{x:Static local:Colors.DarkGray}"
					IsLoading="{Binding IsLoading}"
					LoadingText="{Binding LoadingText}"
					FailureMessage="{Binding LoadingFailureMessage}"
					IsNetworkAvailable="{Binding IsNetworkAvailable}"
					TryAgainCommand="{Binding ReloadCommand}" />
				<StackLayout
					Orientation="Vertical"
					Spacing="5"
					Padding="0">
					<StackLayout
						Spacing="10">
						<!--STORE IMAGE-->
						<local:RemovableContainerView
							HeightRequest="230"
							HorizontalOptions="FillAndExpand"
							Padding="20,5,5,20">
							<local:RemovableContainerView.RootContent>
								<Grid
									VerticalOptions="FillAndExpand"
									HorizontalOptions="FillAndExpand">
									<BoxView
										VerticalOptions="FillAndExpand"
										HorizontalOptions="FillAndExpand"
										BackgroundColor="{x:Static local:Colors.Placeholder}" />
									<StackLayout
										HorizontalOptions="Center"
										VerticalOptions="End"
										Padding="10">
										<Label
											Text="{local:Translate LabelAddMainImage}"
											TextColor="{x:Static local:Colors.Main}"
											FontSize="10" />
									</StackLayout>
									<Image
										BackgroundColor="{x:Static local:Colors.Placeholder}"
										Source="placeholder.png"
										VerticalOptions="Center"
										HorizontalOptions="Center" />
									<Image
										Aspect="AspectFill"
										BackgroundColor="Transparent"
										Source="{Binding Store.ImageUrl, Converter={StaticResource cachedImage}}"
										VerticalOptions="FillAndExpand"
										HorizontalOptions="FillAndExpand" />
								</Grid>
							</local:RemovableContainerView.RootContent>
						</local:RemovableContainerView>
						<StackLayout
							Spacing="0"
							Padding="20,0,20,0">
							<Button
								Text="{local:Translate ButtonAddImage}"
								Style="{StaticResource Button1}" />
						</StackLayout>
						<!--STORE NAME-->
						<StackLayout
							Spacing="5"
							Padding="20,0,20,0">
							<Label
								Text="{local:Translate LabelStoreName}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17"
								FontAttributes="Bold" />
							<Editor
								Text="{Binding Name, Mode=TwoWay}"
								HeightRequest="50"
								HorizontalOptions="FillAndExpand"/>
							<BoxView
								HeightRequest="1"
								HorizontalOptions="FillAndExpand"
								BackgroundColor="{x:Static local:Colors.Placeholder}" />
						</StackLayout>
						<!--CATEGORY-->
						<StackLayout
							Spacing="0"
							Padding="20,0,20,0">
							<Label
								Text="{local:Translate LabelCategory}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17"
								FontAttributes="Bold" />
							<local:BindablePicker
								x:Name="categoriesPicker"
								x:TypeArguments="core:IStoreCategory"
								Title="{local:Translate LabelCategory}"
								ItemsSource="{Binding Categories}"
								SelectedItem="{Binding StoreFilter.Category, Mode=TwoWay}"
								TextColor="{x:Static local:Colors.Black}" />
						</StackLayout>
						<!--COUNTRY-->
						<StackLayout
							Spacing="0"
							Padding="20,0,20,0">
							<Label
								Text="{local:Translate LabelCountry}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17"
								FontAttributes="Bold" />
							<local:BindablePicker
								x:Name="countriesPicker"
								x:TypeArguments="core:ICountry"
								Title="{local:Translate LabelCountry}"
								ItemsSource="{Binding Countries}"
								SelectedItem="{Binding StoreFilter.Country, Mode=TwoWay}"
								TextColor="{x:Static local:Colors.Black}" />
						</StackLayout>
						<!--CITY-->
						<StackLayout
							Spacing="0"
							Padding="20,0,20,0"
							IsEnabled="{Binding IsCityEnabled}"
							Opacity="{Binding IsCityEnabled, Converter={StaticResource opacity}}">
							<Label
								Text="{local:Translate LabelCity}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17" 
								FontAttributes="Bold"/>
							<local:BindablePicker
								x:Name="citiesPicker"
								x:TypeArguments="core:ICity"
								Title="{local:Translate LabelCity}"
								ItemsSource="{Binding Cities}"
								SelectedItem="{Binding StoreFilter.City, Mode=TwoWay}"
								TextColor="{x:Static local:Colors.Black}" />
						</StackLayout>
						<!--DESCRIPTION-->
						<StackLayout
							Spacing="5"
							Padding="20,0,20,0">
							<Label
								Text="{local:Translate LabelDescription}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17"
								FontAttributes="Bold" />
							<Editor
								Text="{Binding Description, Mode=TwoWay}"
								HeightRequest="100"
								HorizontalOptions="FillAndExpand" />
							<BoxView
								HeightRequest="1"
								HorizontalOptions="FillAndExpand"
								BackgroundColor="{x:Static local:Colors.Placeholder}" />
						</StackLayout>
						<!--DELIVERY NOTES-->
						<StackLayout
							Spacing="5"
							Padding="20,0,20,0">
							<Label
								Text="{local:Translate LabelDeliveryNotes}"
								TextColor="{x:Static local:Colors.Main}"
								FontSize="17"
								FontAttributes="Bold" />
							<Editor
								Text="{Binding DeliveryNotes, Mode=TwoWay}"
								HeightRequest="100"
								HorizontalOptions="FillAndExpand"/>
							<BoxView
								HeightRequest="1"
								HorizontalOptions="FillAndExpand"
								BackgroundColor="{x:Static local:Colors.Placeholder}" />
						</StackLayout>
					</StackLayout>
				</StackLayout>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>