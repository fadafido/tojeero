<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=TwinTechsForms"
			 xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
			 x:Class="Tojeero.Forms.ProductsPage">
	<ContentPage.Content
		BackgroundColor="{x:Static local:Colors.LightGray}">
		<xlabs:GridView
			RowSpacing="5"
			ColumnSpacing="5"
			ContentPaddingBottom="60"
			ContentPaddingTop="10"
			ContentPaddingLeft="10"
			ContentPaddingRight="10"
			ItemWidth="150"
			ItemHeight="200"
			SelectionEnabled="false"
			BackgroundColor="Transparent"
			ItemsSource="{Binding Collection}">

			<xlabs:GridView.ItemTemplate>

				<DataTemplate>

					<local:ProductGridCell />

				</DataTemplate>

			</xlabs:GridView.ItemTemplate>

		</xlabs:GridView>
	</ContentPage.Content>
</ContentPage>
