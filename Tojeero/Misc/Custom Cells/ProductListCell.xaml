<?xml version="1.0" encoding="UTF-8"?>
<ViewCell
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Tojeero.Forms.ProductListCell"
	xmlns:local="clr-namespace:Tojeero.Forms;assembly=Tojeero.Forms"
	xmlns:core="clr-namespace:Tojeero.Core;assembly=Tojeero.Forms">
	<AbsoluteLayout
		Padding="12,3,12,3"
		VerticalOptions="FillAndExpand"
		HorizontalOptions="FillAndExpand">
		<local:BorderView
			Grid.RowSpan="3"
			Grid.ColumnSpan="4"
			BorderColor="{x:Static local:Colors.CellBorder}"
			BorderWidth="1"
			AbsoluteLayout.LayoutFlags="All"
			AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
			BackgroundColor="{x:Static local:Colors.CellBackground}" />
		<Grid
			ColumnSpacing="0"
			RowSpacing="0"
			Padding="3,3,0,3"
			VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand"
			AbsoluteLayout.LayoutFlags="All"
			AbsoluteLayout.LayoutBounds="0.01, 0.01, 0.98, 0.98">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="120" />
				<ColumnDefinition
					Width="5" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="30" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="20" />
			</Grid.RowDefinitions>
			<BoxView
				Grid.RowSpan="3"
				BackgroundColor="{x:Static local:Colors.Placeholder}"
				VerticalOptions="FillAndExpand"
				HorizontalOptions="FillAndExpand" />
			<Image
				Grid.RowSpan="3"
				Aspect="AspectFit"
				BackgroundColor="{x:Static local:Colors.Placeholder}"
				Source="{Binding Product.ImageUrl, Converter={StaticResource cachedImage}}"
				VerticalOptions="FillAndExpand"
				HorizontalOptions="FillAndExpand" />
			<local:LabelEx
				Grid.Column="2"
				Text="{Binding Product.Name}"
				TextColor="{x:Static local:Colors.Main}"
				FontAttributes="Bold"
				LineCount="2"
				FontSize="12"
				VerticalOptions="FillAndExpand" />
			<local:ImageButton
				Grid.Column="3"
				VerticalOptions="Start"
				HeightRequest="25"
				WidthRequest="30"
				SelectedImage="favorite_selected.png"
				Image="favorite_deselected.png"
				IsSelected="{Binding Favorite.IsFavorite}"
				IsEnabled="{Binding CanExecuteToggleFavoriteCommand}"
				IsVisible="{Binding IsFavoriteToggleVisible}"
				Command="{Binding ToggleFavoriteCommand}" />
			<StackLayout
				Grid.Row="1"
				Grid.Column="2"
				Grid.ColumnSpan="2"
				VerticalOptions="Center"
				Padding="0,0,6,0">
				<Label
					Text="{Binding StatusWarning}"
					TextColor="{Binding WarningColor}"
					IsVisible="{Binding StatusWarning, Converter={StaticResource visibility}}"
					FontSize="10"
					XAlign="End"/>
			</StackLayout>
			<StackLayout
				Grid.Row="2"
				Grid.Column="2"
				Grid.ColumnSpan="2"
				Orientation="Horizontal"
				HorizontalOptions="EndAndExpand"
				VerticalOptions="Center"
				Spacing="0"
				Padding="0,0,6,0">
				<Label
					Text="{Binding Product.FormattedPrice}"
					TextColor="{x:Static local:Colors.Secondary}"
					FontAttributes="Bold"
					LineBreakMode="TailTruncation"
					FontSize="15" />
				<Label
					Text="{Binding Product.Country.Currency}"
					TextColor="{x:Static local:Colors.Main}"
					FontAttributes="Bold"
					FontSize="9"
					VerticalOptions="Center" />
			</StackLayout>
		</Grid>
	</AbsoluteLayout>
</ViewCell>